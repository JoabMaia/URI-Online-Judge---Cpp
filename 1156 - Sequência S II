#include <iostream>
#include <iomanip>
#include <math.h>

using namespace std;

int main() {
  float num=0, cont=0, som=0;

  cout << fixed << setprecision(2);

  for(int i=1; i<40; i++){
    if(i%2 != 0){
      som += i/pow(2,cont);
      cont += 1;
    }
  }

  cout << som << fixed << setprecision(2) << endl;

  return 0;
}

#include <iostream>
#include <iomanip>

using namespace std;

int main() {
  float num, somaNum=0;
  int cont=0;

  cout << fixed << setprecision(2);

  while(true){

    cin >> num;

    if(num >= 0){
      somaNum += num;
      cont++;
      continue;
    }
    else{
      break;
    }
  }

  cout << somaNum/cont << fixed << setprecision(2) << endl;

  return 0;
}

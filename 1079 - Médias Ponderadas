#include <iostream>
#include <stdio.h>

using namespace std;

int main(){
    int num;
    float val1, val2, val3;
    
    cin >> num;
    
    for(int i = 0; i < num; i++){
      cin >> val1;
      cin >> val2;
      cin >> val3;
            
      printf("%.1f\n", (val1*2 + val2*3 + val3*5)/(2.0+3.0+5.0));
    }
    
    return 0;
}

#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    
  string nomeVend;
  double salarioFixo, totalVendasEfet, salarioRec;

  cout << fixed << setprecision(2);

  cin >> nomeVend >> salarioFixo >> totalVendasEfet;

  salarioRec = salarioFixo + (totalVendasEfet * 0.15);

  cout << "TOTAL = R$ " << salarioRec << fixed << setprecision(2) << endl;

  return 0;
}
